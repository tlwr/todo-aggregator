{{ define "todo" }}
<div>
  <a href="{{ .URL }}">{{ .Name }}</a>
</div>
{{ end }}

<!DOCTYPE html>
<html lang="en-GB">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/styles.css" type="text/css">
    <link rel="icon" href="/favicon.ico">
    <title>todos</title>
  </head>


  <body>
    <div class="container">
      <header><h1>todos</h1></header>
    </div>

    <main>
      <h2>doing</h2>
      {{ range $index, $todo := . }}
      {{ if and ($todo.Started) (not $todo.Finished) }}
        {{ template "todo" $todo }}
      {{ end }}
      {{ end }}

      <h2>todo</h2>
      {{ range $index, $todo := . }}
      {{ if and (not $todo.Started) (not $todo.Finished) }}
        {{ template "todo" $todo }}
      {{ end }}
      {{ end }}

      <h2>done</h2>
      {{ range $index, $todo := . }}
      {{ if $todo.Finished }}
        {{ template "todo" $todo }}
      {{ end }}
      {{ end }}
    </main>
  </body>
</html>

