{{ define "todo" }}
<div style="margin-left: 5px; padding-left: 5px; border-left: 1px solid black">
  <a href="{{ .URL }}">{{ .Source }}</a>: {{ .Name }}
</div>
{{ end }}

<!DOCTYPE html>
<html lang="en-GB">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/styles.css" type="text/css">
    <link rel="icon" href="/favicon.ico">
    <title>todos</title>
  </head>


  <body style="max-width: 900px; margin: 10px auto;">
    <div class="container">
      <header><h1>todos</h1></header>
    </div>

    <main>
      <details open>
        <summary>doing</summary>
        {{ range $index, $todo := . }}
        {{ if and ($todo.Started) (not $todo.Finished) }}
          {{ template "todo" $todo }}
        {{ end }}
        {{ end }}
      </details>

      <details open>
        <summary>todo</summary>
        {{ range $index, $todo := . }}
        {{ if and (not $todo.Started) (not $todo.Finished) }}
          {{ template "todo" $todo }}
        {{ end }}
        {{ end }}
      </details>
    </main>
  </body>
</html>

